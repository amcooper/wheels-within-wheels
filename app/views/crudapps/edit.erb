<div class="entry-header">edit an app</div>
<form method="post" action="/crudapps/<%= @crudapp.id %>">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" value="<%= @crudapp.user_id %>">

  <ul class="basic-form">
    <li>
      <label for="crudapp[title]">Application title</label>
      <input type="text" name="crudapp[title]" value="<%= @crudapp.title %>">
    </li>
    <li>
      <label for="crudapp[description]">Description</label>
      <textarea name="crudapp[description]"><%= @crudapp.description %></textarea>
    </li>
    <li>
      <label for="crudapp[model]">Item name</label>
      <input type="text" name="crudapp[model]" value="<%= @crudapp.model %>">
    </li> 

    <input type="hidden" name="columns[0][id]" value="<%= @crudapp.columns[0].id %>">

    <li>
      <label for="columns[][key_name]">First attribute name</label>
      <input type="text" name="columns[0][key_name]" value="<%= @crudapp.columns[0].key_name %>">
    </li>
    <li>
      <label for="columns[][data_type]">First attribute data type</label>
      <input type="text" name="columns[0][data_type]" value="<%= @crudapp.columns[0].data_type %>">
    </li> 

    <input type="hidden" name="columns[1][id]" value="<%= @crudapp.columns[1].id %>">

    <li>
      <label for="columns[][key_name]">Second attribute name</label>
      <input type="text" name="columns[1][key_name]" value="<%= @crudapp.columns[1].key_name %>">
    </li>
    <li>
      <label for="columns[][data_type]">Second attribute data type</label>
      <input type="text" name="columns[1][data_type]" value="<%= @crudapp.columns[1].data_type %>">
    </li>

    <input type="hidden" name="columns[2][id]" value="<%= @crudapp.columns[2].id %>">

    <li>
      <label for="columns[][key_name]">Third attribute name</label>
      <input type="text" name="columns[][key_name]" value="<%= @crudapp.columns[2].key_name %>">
    </li>
    <li>
      <label for="columns[][data_type]">Third attribute data type</label>
      <input type="text" name="columns[][data_type]" value="<%= @crudapp.columns[2].data_type %>">
    </li>
    <li>
      <label for="crudapp[github]">GitHub link</label>
      <input type="text" name="crudapp[github]" value="<%= @crudapp.github %>">
    </li>
    <li>
      <label for="crudapp[web]">Web link</label>
      <input type="text" name="crudapp[web]" value="<%= @crudapp.web %>">
    </li>
  </ul>
    
  <div class="entry-submit-margin">
    <input class="entry-submit" type="submit" value="submit">
  </div>
</form>